<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Система статус-бара -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Навигационная панель -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SecondScreenTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <!-- Изменение цвета текста -->
        <item name="android:textColor">@android:color/white</item>
        <!-- Изменение цвета иконок -->
        <item name="itemIconTint">@android:color/white</item>
        <!-- Цвет активных элементов -->
        <item name="itemTextColor">@android:color/white</item>
    </style>
</resources>
